function ModeSign

    @: (@track, @node) ->
        
        atStart = node == @track.node[0]
        geom = Geom.box size:10
        @mesh = new Mesh geom, Materials.track.rail
        @mesh.position.copy @node.getPos()
        world.scene.add @mesh
        
    del: ->
        
        @mesh.removeFromParent()

module.exports = ModeSign
