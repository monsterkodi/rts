    addCentralStation: (cfg) ->
        
        new CentralStation cfg

    addMiningStation: (cfg) ->
        
        new MiningStation cfg
        
    addStation: (cfg) ->
        
        switch cfg.name[0] 
            'M' ➜ @addMiningStation  cfg
            'C' ➜ @addCentralStation cfg
        
