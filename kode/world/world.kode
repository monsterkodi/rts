    clear: ->
        
        @traffic.clear()
        
        for train in @allTrains()
            train.del()
        
        for station in @allStations()
            station.del()
            
        for node in @allNodes()
            node.del()
            
        for track in @allTracks()
            track.del()
            
        @physics.clear()
                    
